---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
}

const { title, description = 'Private Disney trip planning site.', noIndex = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    {
      noIndex && (
        <meta
          name="robots"
          content="noindex, nofollow, noarchive, nosnippet, noimageindex, notranslate"
        />
      )
    }
    <title>{title}</title>
  </head>
  <body>
    <div class="site-shell">
      <slot />
    </div>
  </body>
</html>
