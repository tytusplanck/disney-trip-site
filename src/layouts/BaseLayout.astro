---
import '../styles/global.css';
import { siteShellData } from '../data/site-shell';

interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
}

const { title, description = siteShellData.defaultDescription, noIndex = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    {
      noIndex && (
        <meta
          name="robots"
          content="noindex, nofollow, noarchive, nosnippet, noimageindex, notranslate"
        />
      )
    }
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#main-content">{siteShellData.skipLinkLabel}</a>
    <div class="site-shell">
      <header class="site-masthead">
        <a class="brand-mark" href="/" aria-label={siteShellData.brandLinkLabel}>
          <span class="brand-mark__eyebrow">{siteShellData.brandEyebrow}</span>
          <span class="brand-mark__title">{siteShellData.brandTitle}</span>
        </a>
        <p class="site-masthead__note">{siteShellData.mastheadNote}</p>
      </header>
      <slot />
      <footer class="site-footer">
        <p>{siteShellData.footerNote}</p>
      </footer>
    </div>
  </body>
</html>
