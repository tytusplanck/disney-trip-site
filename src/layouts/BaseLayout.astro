---
import '../styles/global.css';
import { siteShellData } from '../data/site-shell';

interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
}

const { title, description = siteShellData.defaultDescription, noIndex = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;1,300;1,400&family=DM+Sans:wght@300;400;500&family=JetBrains+Mono:wght@400;600&display=swap"
      rel="stylesheet"
    />
    {
      noIndex && (
        <meta
          name="robots"
          content="noindex, nofollow, noarchive, nosnippet, noimageindex, notranslate"
        />
      )
    }
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#main-content">{siteShellData.skipLinkLabel}</a>
    <div class="app-shell">
      <slot />
    </div>
    <script>
      const disclosureQuery = window.matchMedia('(max-width: 720px)');

      const syncDisclosurePanels = () => {
        document.querySelectorAll('details[data-mobile-collapsed]').forEach((panel) => {
          if (!(panel instanceof HTMLDetailsElement)) {
            return;
          }

          if (panel.dataset['userToggled'] === 'true') {
            return;
          }

          panel.open = !disclosureQuery.matches;
        });
      };

      const markDisclosureAsTouched = (event: MouseEvent) => {
        if (!(event.target instanceof Element)) {
          return;
        }

        const summary = event.target.closest('details[data-mobile-collapsed] > summary');

        if (summary?.parentElement instanceof HTMLDetailsElement) {
          summary.parentElement.dataset['userToggled'] = 'true';
        }
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', syncDisclosurePanels, { once: true });
      } else {
        syncDisclosurePanels();
      }

      disclosureQuery.addEventListener('change', syncDisclosurePanels);
      document.addEventListener('click', markDisclosureAsTouched);
    </script>
  </body>
</html>
