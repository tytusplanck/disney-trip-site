---
import { siteShellData } from '../data/site-shell';

interface Props {
  href?: string;
}

const { href = '/' } = Astro.props;
---

<a class="brand-mark" href={href} aria-label={siteShellData.brandLinkLabel}>
  <span class="brand-mark__disney">Disney</span>
  <span class="brand-mark__sep">/</span>
  <span class="brand-mark__by">Planned by</span>
  <span class="brand-mark__tytus">Tytus</span>
</a>
