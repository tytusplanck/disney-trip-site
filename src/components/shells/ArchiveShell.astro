---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SiteHeader from '../SiteHeader.astro';

interface StatItem {
  label: string;
  value: string;
}

interface Props {
  title: string;
  description: string;
  metaLabel: string;
  statItems: StatItem[];
  footerNote: string;
}

const { title, description, metaLabel, statItems, footerNote } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="archive-shell">
    <SiteHeader railLabel="Archive statistics" statItems={statItems}>
      <p slot="context" class="site-header__context-text">
        {metaLabel}
      </p>
    </SiteHeader>
    <main class="archive-main" id="main-content">
      <slot />
    </main>
    <footer class="archive-footer">
      <p class="archive-footer__brand">Disney Planned by Tytus</p>
      <p class="archive-footer__note">{footerNote}</p>
    </footer>
  </div>
</BaseLayout>
