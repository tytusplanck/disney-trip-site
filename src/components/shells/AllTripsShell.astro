---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SiteHeader from '../SiteHeader.astro';

interface StatItem {
  label: string;
  value: string;
}

interface Props {
  title: string;
  description: string;
  metaLabel: string;
  statItems: StatItem[];
  footerNote: string;
}

const { title, description, metaLabel, statItems, footerNote } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="all-trips-shell">
    <SiteHeader
      headerKind="archive"
      railLabel="All trips archive summary"
      statItems={statItems}
      mobileFactsLabel="All Trips Facts"
      mobileFactsItems={statItems}
    >
      <p slot="context" class="site-header__context-text">
        {metaLabel}
      </p>
    </SiteHeader>
    <main class="all-trips-main" id="main-content">
      <slot />
    </main>
    <footer class="all-trips-footer">
      <p class="all-trips-footer__brand">Disney Planned by Tytus</p>
      <p class="all-trips-footer__note">{footerNote}</p>
    </footer>
  </div>
</BaseLayout>
