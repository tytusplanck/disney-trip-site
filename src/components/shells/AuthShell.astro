---
import BrandMark from '../BrandMark.astro';

interface Props {
  metaLabel: string;
}

const { metaLabel } = Astro.props;
---

<div class="auth-shell">
  <header class="auth-shell__header">
    <BrandMark href="/login" />
    <p class="auth-shell__meta">{metaLabel}</p>
  </header>

  <main class="auth-shell__main" id="main-content">
    <slot />
  </main>
</div>
